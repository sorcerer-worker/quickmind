{
  "name": "quickmind",
  "productName": "quickmind",
  "version": "0.8.0",
  "description": "Epic note-keeping and to-do app built in Electron by quick",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "release": "electron-builder --win",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quick/quickmind.git"
  },
  "keywords": [],
  "author": {
    "name": "quick",
    "email": "quick@withered.app",
    "url": "https://quick.design/"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "appId": "design.quick.quickmind",
            "name": "quickmind",
            "productName": "quickmind",
            "copyright": "Â© Copyright 2022 quick"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "electron": "^19.0.7",
    "electron-forge": "^5.2.4",
    "electron-json-storage": "^4.5.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^5.0.5",
    "fs": "^0.0.1-security",
    "shell": "^0.9.4"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "^19.0.7",
    "electron-builder": "^22.14.13"
  },
  "build": {
    "publish": [
      "github"
    ]
  }
}
